datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Topic {
    id    String @id @default(cuid())
    name  String
    users UserToTopic[]
    blogs BlogToTopic[]
}

model User {
    id       String    @id
    topics UserToTopic[]
    blogs    Blog[]
    comments Comment[]
}

model Comment {
    id      String @id @default(cuid())
    content String
    likes   Int    @default(0)
    user_id String
    user    User   @relation(fields: [user_id], references: [id])
    blog_id String
    blog    Blog   @relation(fields: [blog_id], references: [id])
}

model Blog {
    id        String    @id @default(cuid())
    content   String
    title     String
    createdAt DateTime  @default(now())
    user_id   String
    user      User      @relation(fields: [user_id], references: [id])
    topics    BlogToTopic[]
    comments  Comment[]
}

model UserToTopic{
    user_id String
    topic_id String
    user User @relation(fields: [user_id], references: [id])
    topic Topic @relation(fields: [topic_id], references: [id])

    @@id([user_id, topic_id])
}

model BlogToTopic{
    blog_id String
    topic_id String
    blog Blog @relation(fields: [blog_id], references: [id])
    topic Topic @relation(fields: [topic_id], references: [id])

    @@id([blog_id, topic_id])
}